<!DOCTYPE html>
<html lang="en">

{{> header}}

<body>
{{> menu}}
<div class="main-container"><br>
    <div id="message_container">
        <div class="register_add">
            <h1>{{heading}}</h1>
            {{#if isAuthenticated}}
                <p><a class="form_button" href="/new_post">Add Post</a></p>
            {{else}}
                <p>
                    <a href="/registration" class="reg_link">Register a new account to start posting!</a>
                </p>
            {{/if}}
        </div>
        <hr>

        <ul class="message_list">
            {{#each message}}
                <li><a href="/thread/{{_id}}">[{{category}}] {{title}}</a>
                    <p class="poster">Posted by: {{username}} on {{date}}</p>
                    <hr></li>
            {{/each}}
        </ul>
    </div>
    {{> footer}}
</div>
</body>
</html>