<!DOCTYPE html>
<html lang="en">

{{> header}}

<body>
{{> menu}}
<div class="flex-wrapper">
    <div id="message_container">
        <div class="register_add">
            <h1>{{heading}}</h1>
            {{#if isAuthenticated}}
                <p><a class="form_button" href="http://localhost:{{port}}/new_post">Add Post</a></p>
            {{else}}
                <p>
                    <a href="http://localhost:{{port}}/registration" class="reg_link">Register a new account to start posting!</a>
                </p>
            {{/if}}
        </div>
        <hr>

        <ul class="message_list">
            {{#each message}}
                <li><a href="http://localhost:{{port}}/thread/{{_id}}">{{title}}</a>
                    <p class="poster">Posted by: {{username}} on {{date}}</p>
                    <hr></li>
            {{/each}}
        </ul>
    </div>
</div>
</body>

{{> footer}}

</html>