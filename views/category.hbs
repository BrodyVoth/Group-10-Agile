<!DOCTYPE html>
<html lang="en">

{{> header}}

<body>
{{> menu}}
<div class="main-container"><br>
    <div id="message_container">
        <div class="register_add">
            <h1>{{heading}}</h1>
            {{#if isAuthenticated}}
                <p><a class="form_button" href="/new_post">Add Post</a></p>
            {{else}}
                <p>
                    <a href="/registration" class="reg_link">Create an account to start posting!</a>
                </p>
            {{/if}}
                <p>
                    <select name="category" onChange="window.location.href=this.value">
                        <option selected hidden>{{heading}}</option>
                        <option value="/">All Posts</option>    
                        <option value="/forum/School">School</option>
                        <option value="/forum/Entertainment">Entertainment</option>
                        <option value="/forum/Help">Help</option>
                        <option value="/forum/Meta">Meta</option>
                        <option value="/forum/Other">Other</option>
                    </select>
                </p>
        </div>
        <hr>

        <ul class="message_list">
            {{#each thread}}
                <li>
                    <a href="/thread/{{_id}}">{{title}}</a>
                    <p style="margin-bottom: -10px; font-size: 12px">Replies: {{replies}}</p>
                    <p class="poster">Posted by: {{username}} on {{date}}</p>
                <hr></li>
            {{/each}}
        </ul>
    </div>
    {{> footer}}
</div>
</body>
</html>